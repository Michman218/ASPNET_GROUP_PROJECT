@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ASPNET_GROUP_PROJECT.Models.LoginViewModel
@{
    Layout = "_Layout";
}

<fieldset class="account">

    <h1>Login</h1>
    <br />

    <form role="form" asp-action="Login">
        <div asp-validation-summary="All" class="input-validation-error"></div>

        <div class="">
            <label asp-for="Username"></label>
            <input type="text" asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="field-validation-error"></span>
        </div>

        <div class="">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="field-validation-error"></span>
        </div>

        <div class="">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
        </div>

        <div>
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

    </form>

    <br />

    <div class="form-group">
        <label>Not Registered?</label>
        <a asp-action="Register">Create a new account</a>
    </div>

</fieldset>
